{
    "extends":"@repo/typescript-config/base.json",
    "compilerOptions": {
      "moduleResolution": "nodenext",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "paths": {
        "@utils/*":["./utils/*","./src/utils/*"],
        "@router/*":["./router/*","./src/router/*"],
        "@controller/*":["./controller/*","./src/controller/*"],
        "@middleware/*":["./middleware/*","./src/middleware/*"],
        "@system/*":["./system/*","./src/system/*"],
        "@ws/*":["./ws/*","./src/ws/*"],
        "@types/*":["./types/*","./src/types/*"],
        "@os/*":["./os/*","./src/os/*"]
      }
    }
  }